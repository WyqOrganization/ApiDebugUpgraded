<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginTop="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:clickable="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="接口名称："
                android:textColor="@color/colorTextName"
                android:textSize="@dimen/width38px" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width22px"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorTextValue"
                android:textSize="@dimen/width38px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width22px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="接口类型："
                    android:textColor="@color/colorTextName"
                    android:textSize="@dimen/width38px" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/width22px"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/colorTextValue"
                    android:textSize="@dimen/width38px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_field_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/width22px"
                android:layout_toLeftOf="@+id/tv_postMan"
                android:background="@drawable/shape_list_btn_bg"
                android:gravity="center"
                android:padding="@dimen/width22px"
                android:text="字段详情"
                android:textColor="@color/colorTextValue"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_postMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/width22px"
                android:background="@drawable/shape_list_btn_bg"
                android:gravity="center"
                android:padding="@dimen/width22px"
                android:text="模拟请求"
                android:textColor="@color/colorTextValue"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="接口地址："
                android:textColor="@color/colorTextName"
                android:textSize="@dimen/width38px" />

            <TextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width22px"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorTextValue"
                android:textIsSelectable="false"
                android:textSize="@dimen/width38px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_parameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginTop="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="接口参数："
                android:textColor="@color/colorTextName"
                android:textSize="@dimen/width38px" />

            <TextView
                android:id="@+id/tv_parameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width22px"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorTextValue"
                android:textIsSelectable="false"
                android:textSize="@dimen/width38px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginTop="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="访问日期："
                android:textColor="@color/colorTextName"
                android:textSize="@dimen/width38px" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width22px"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorTextValue"
                android:textSize="@dimen/width38px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginTop="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:clickable="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="接口描述："
                android:textColor="@color/colorTextName"
                android:textSize="@dimen/width38px" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width22px"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/colorTextValue"
                android:textSize="@dimen/width38px" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width43px" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width43px"
            android:background="#f5f5f5" />

    </LinearLayout>

</LinearLayout>