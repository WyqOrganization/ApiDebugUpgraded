<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height148px"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/HeadBarButton"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/device_info"
            android:textColor="#ffffff"
            android:textSize="@dimen/width52px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height43px"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@drawable/layout_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:gravity="center_vertical"
            android:minWidth="@dimen/width230px"
            android:text="UUID："
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

        <TextView
            android:id="@+id/tvIdCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorMoreItemText"
            android:textIsSelectable="true"
            android:textSize="@dimen/width45px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@drawable/layout_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:gravity="center_vertical"
            android:minWidth="@dimen/width230px"
            android:text="IMEI："
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

        <TextView
            android:id="@+id/tvImei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorMoreItemText"
            android:textIsSelectable="true"
            android:textSize="@dimen/width45px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@drawable/layout_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:gravity="center_vertical"
            android:minWidth="@dimen/width230px"
            android:text="系统版本："
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@drawable/layout_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:gravity="center_vertical"
            android:minWidth="@dimen/width230px"
            android:text="手机型号："
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@drawable/layout_ripple_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:gravity="center_vertical"
            android:minWidth="@dimen/width230px"
            android:text="屏幕尺寸："
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

        <TextView
            android:id="@+id/tvScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width43px"
            android:layout_marginRight="@dimen/width43px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorMoreItemText"
            android:textSize="@dimen/width45px" />

    </LinearLayout>

</LinearLayout>