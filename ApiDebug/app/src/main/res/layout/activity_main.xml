<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height127px"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/btnDefault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_domain_black_24dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="默认"
            android:textColor="@color/main_bab_color_normal"
            android:textSize="@dimen/width34px" />

        <RadioButton
            android:id="@+id/btnRealTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_whatshot_black_24dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="实时"
            android:textColor="@color/main_bab_color_normal"
            android:textSize="@dimen/width34px" />

        <RadioButton
            android:id="@+id/btnFav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_favorite_black_24dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="收藏"
            android:textColor="@color/main_bab_color_normal"
            android:textSize="@dimen/width34px" />

        <RadioButton
            android:id="@+id/btnMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_more_horiz_black_24dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="更多"
            android:textColor="@color/main_bab_color_normal"
            android:textSize="@dimen/width34px" />
    </LinearLayout>

    <com.wyq.api.debug.view.SlideViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height127px"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/height127px"
        android:background="#f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>